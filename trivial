class Question: #ÎºÎ»Î¬ÏƒÎ· ÎµÏÏÏ„Î·ÏƒÎ·
    def __init__(self, question: str, correct_answer: str, choices: list):
        self.question_text = question #Î¿ÏÎ¯Î¶Ï‰ Ï„Î·Î½ ÎµÏÏÏ„Î·ÏƒÎ·
        self.correct_answer = correct_answer #Î¿ÏÎ¯Î¶Ï‰ Ï„Î·Î½ Î±Ï€Î¬Î½Ï„Î·ÏƒÎ·
        self.choices = choices #Î¿ÏÎ¯Î¶Ï‰ Ï„Î¹Ï‚ ÎµÏ€Î¹Î»Î¿Î³Î­Ï‚ Ï„Î¿Ï… Ï‡ÏÎ®ÏƒÏ„Î· ÎºÎ±Î¹ Ï„Î¹Ï‚ ÎºÎ¬Î½Ï‰ Î»Î¯ÏƒÏ„Î±
        
class Quiz:
    def __init__(self, questions):# Ï€Î±Î¯ÏÎ½ÎµÎ¹ Ï„Î· Î»Î¯ÏƒÏ„Î± questions
        self.question_no = 0 #Î¿ÏÎ¯Î¶ÎµÏ„Î±Î¹ 0 Î¿ Î±/Î± ÎµÏÏÏ„Î·ÏƒÎ·Ï‚
        self.score = 0 #Î¿ÏÎ¯Î¶ÎµÏ„Î±Î¹ Ï„Î¿ ÏƒÎºÎ¿Ï 0
        self.questions = questions
        self.current_question = None

    def has_more_questions(self):
        
        #ÎµÎ»Î­Î³Ï‡Ï‰ Î±Î½ Î­Ï‡ÎµÎ¹ Î¬Î»Î»ÎµÏ‚ ÎµÏÏ‰Ï„Î®ÏƒÎµÎ¹Ï‚        
        return self.question_no < len(self.questions)
    def has_no_more_questions(self):
        
        #ÎµÎ»Î­Î³Ï‡Ï‰ Î±Î½ Î­Ï‡ÎµÎ¹ Î¬Î»Î»ÎµÏ‚ ÎµÏÏ‰Ï„Î®ÏƒÎµÎ¹Ï‚        
        return self.question_no > 1

    def next_question(self):
        #Ï€Î±Î¯ÏÎ½Ï‰ Ï„Î·Î½ ÎµÏÏÏ„Î·ÏƒÎ· Î±Ï€Î¿ Î»Î¯ÏƒÏ„Î±
        self.current_question = self.questions[self.question_no]
        self.question_no += 1 #Î±Ï…Î¾Î¬Î½Ï‰ ÎºÎ±Ï„Î¬ 1
        q_text = self.current_question.question_text
        #ÎµÏ€Î¹ÏƒÏ„ÏÎ­Ï†Ï‰ Î¼Î¿ÏÏ†Î¿Ï€Î¿Î¹Î·Î¼Î­Î½Î± Ï€Ï‡. ÎÎ¿ 1(+..) ÎºÎ±Î¹ Î´Î¯Ï€Î»Î± Ï„Î·Î½ ÎºÎ¬Î¸Îµ ÎµÏÏÏ„Î·ÏƒÎ·
        return f"No.{self.question_no}: {q_text}"
    
    def prv_question(self):

    
        #Ï€Î±Î¯ÏÎ½Ï‰ Ï„Î·Î½ ÎµÏÏÏ„Î·ÏƒÎ· Î±Ï€Î¿ Î»Î¯ÏƒÏ„Î±
        self.current_question = self.questions[self.question_no-2]
        self.question_no -= 1 #Î¼ÎµÎ¹ÏÎ½Ï‰ ÎºÎ±Ï„Î¬ 1
        q_text = self.current_question.question_text
        
        #ÎµÏ€Î¹ÏƒÏ„ÏÎ­Ï†Ï‰ Î¼Î¿ÏÏ†Î¿Ï€Î¿Î¹Î·Î¼Î­Î½Î± Ï€Ï‡. ÎÎ¿ 1(-..) ÎºÎ±Î¹ Î´Î¯Ï€Î»Î± Ï„Î·Î½ ÎºÎ¬Î¸Îµ ÎµÏÏÏ„Î·ÏƒÎ·
        return f"No.{self.question_no}: {q_text}"

    def check_answer(self, user_answer):
        #ÎµÎ»Î­Î³Ï‡Ï‰ Î±Î½ Î· Î±Ï€Î¬Î½Ï„Î·ÏƒÎ· Ï„Î¿Ï… Ï‡ÏÎ®ÏƒÏ„Î· ÎµÎ¯Î½Î±Î¹ ÏƒÏ‰ÏƒÏ„Î® Î® ÏŒÏ‡Î¹
        
        correct_answer = self.current_question.correct_answer
        if user_answer.lower() == correct_answer.lower():
            self.score += 1 #ÎºÏÎ±Ï„Î¬Ï‰ Ï„Î· Î²Î±Î¸Î¼Î¿Î»Î¿Î³Î¯Î±
            return True
        else:
            return False

    def get_score(self):
        #Î±Ï†Î±Î¹ÏÏ Î±Ï€Î¿ Ï„Î¿ ÏƒÏÎ½Î¿Î»Î¿ Ï„Ï‰Î½ ÎµÏÏ‰Ï„Î®ÏƒÎµÏ‰Î½ Ï„Î¹Ï‚ ÏƒÏ‰ÏƒÏ„Î­Ï‚ ÎºÎ±Î¹ Î²ÏÎ¯ÏƒÎºÏ‰ Ï„Î¹Ï‚ Î»Î¬Î¸Î¿Ï‚        
        wrong = self.question_no - self.score
        # ÎœÎµÏ„Î±Ï„ÏÎ­Ï€Ï‰ ÏƒÎµ Ï€Î¿ÏƒÎ¿ÏƒÏ„ÏŒ Ï„Î¹Ï‚ ÏƒÏ‰ÏƒÏ„Î­Ï‚
        score_percent = int(self.score / self.question_no * 100)
        #ÎµÏ€Î¹ÏƒÏ„ÏÎ­Ï†Ï‰ ÏƒÏ‰ÏƒÏ„Î­Ï‚, Î»Î¬Î¸Î¿Ï‚ ÎºÎ±Î¹ Ï„Î¿ Ï€Î¿ÏƒÎ¿ÏƒÏ„ÏŒ
        return (self.score, wrong, score_percent)
        #return max(self.score, wrong, score_percent)
    
    def get_high_score(self):
        try:
           with open('score.dat', 'rb') as file:
            score = pickle.load(file)
        except:
            score = 0

        print("High score: %d" % score)

#Ï€ÎµÏÎ¹Î²Î¬Î»Î»Î¿Î½ Ï„Î¿Ï… Ï€Î±Î¹Ï‡Î½Î¹Î´Î¹Î¿Ï
class QuizInterface:

    def __init__(self, quiz: Quiz) -> None:
        self.quiz = quiz
        self.window = Tk()
        self.window.title("Who is the smartest person ever?")
        self.window.geometry("1240x620")
        load=Image.open("triv1.jpg")
        render= ImageTk.PhotoImage(load)
        img=Label(self.window, image= render)
        img.place(x=0, y=0)
        self.wrongAnswers = 0
        self.noAnswers = 0

        # Î¤Î¯Ï„Î»Î¿Ï‚
        self.display_title()    

        
        # Î´Î·Î¼Î¹Î¿Ï…ÏÎ³Ï ÎºÎ±Î¼Î²Î¬ Î¼Îµ Î´Î¹ÎºÎ­Ï‚ Î¼Î¿Ï… ÎµÏ€Î¹Î»Î¿Î³Î­Ï‚ 
        self.canvas = Canvas(width=800, height=250, background='#F5F5F6',  highlightthickness='0')

        self.timer = Label(self.window, pady=5, font=("Segoe UI", 18, "bold"), text="timer", background='#1565c0', fg='#ffffff', width=5)
        self.timer.place(x=700, y=1)

        self.question_text = self.canvas.create_text(400, 125, text="Question here", width=750, fill=COLOR, font=('Segoe UI', 20, 'bold'))
        self.canvas.grid(row=4, column=2, columnspan=2, pady=50)
        self.display_question()

        # Î±Ï€Î¿Î¸Î·ÎºÎµÏÏ‰ Ï„Î¹Ï‚ Î±Ï€Î±Î½Ï„Î®ÏƒÎµÎ¹Ï‚ Ï„Î¿Ï… Ï‡ÏÎ®ÏƒÏ„Î·
        self.user_answer = StringVar()

        # ÎµÎ¼Ï†Î¬Î½Î¹ÏƒÎ· 4 ÎµÏ€Î¹Î»Î¿Î³ÏÎ½
        self.opts = self.radio_buttons()
        self.display_options()

        # Î¼Î®Î½Ï…Î¼Î± Î±Î½ ÎµÎ¯Î½Î±Î¹ Î»Î¬Î¸Î¿Ï‚ Î® ÏƒÏ‰ÏƒÏ„Î® Î±Ï€Î¬Î½Ï„Î·ÏƒÎ·
        self.feedback = Label(self.window, pady=5, font=("Segoe UI", 18, "bold"), background='#F5F5F6', justify='center')
        #Î Î¿Ï Î¸Î± ÎµÎ¼Ï†Î±Î½Î¯Î¶ÎµÏ„Î±Î¹ Î±Î½Ï„Î¯ÏƒÏ„Î¿Î¹Ï‡Î¿ Î¼Î®Î½Ï…Î¼Î±
        self.feedback.place(x=200, y=450)

        # ÎºÎ¿Ï…Î¼Ï€Î¹Î¬ Ï€ÏÎ¿Î·Î³Î¿ÏÎ¼ÎµÎ½Î·, ÎµÏ€ÏŒÎ¼ÎµÎ½Î· ÎºÎ±Î¹ Ï„Î­Î»Î¿Ï‚
        self.buttons()

        def countdown(count):
            # change text in label        
            self.timer['text'] = count

            if count > 0:
                # call countdown again after 1000ms (1s)
                self.window.after(1000, countdown, count-1)
            else:
                self.timer.config(bg='red')
                self.timer["text"] = "Î¤ÎµÎ»Î¿Ï‚ Ï‡ÏÎ¿Î½Î¿Ï…"
                self.display_result()
                self.window.destroy()

        countdown(180)

        # ÎºÏ…ÏÎ¯Ï‰Ï‚ Ï€Î±ÏÎ¬Î¸Ï…ÏÎ¿
        self.window.mainloop()

    def display_title(self):
        # Î¤Î¯Ï„Î»Î¿Ï‚
        title = Label(self.window, text="TRIVIAL", width=60, bg="#01579B", fg="#ffffff", font=("Segoe UI", 22, "bold"), justify='center')

        # Î¸Î­ÏƒÎ· Ï„Î¯Ï„Î»Î¿Ï…
        title.place(x=0, y=1)

    def display_question(self):
        #Î•Î¼Ï†Î¬Î½Î¹ÏƒÎ· ÎµÏÏÏ„Î·ÏƒÎ·Ï‚
        q_text = self.quiz.next_question()
        self.canvas.itemconfig(self.question_text, text=q_text)
        
    def display_prv_question(self):
        #Î•Î¼Ï†Î¬Î½Î¹ÏƒÎ· ÎµÏÏÏ„Î·ÏƒÎ·Ï‚
        
        q_text = self.quiz.prv_question()
        self.canvas.itemconfig(self.question_text, text=q_text)

    def radio_buttons(self):#ÎºÎ¿Ï…Î¼Ï€Î¹Î¬ ÎµÏ€Î¹Î»Î¿Î³ÏÎ½ Î±Ï€Î¬Î½Ï„Î·ÏƒÎ·Ï‚
        
        # ÎºÎµÎ½Î® Î»Î¯ÏƒÏ„Î± ÎµÏ€Î¹Î»Î¿Î³ÏÎ½
        choice_list = []

        # Î¸Î­ÏƒÎ· 1Î·Ï‚ ÎµÏ€Î¹Î»Î¿Î³Î®Ï‚
        y_pos = 220

        # Ï€ÏÎ¿ÏƒÎ¸Î®ÎºÎ· ÎµÏ€Î¹Î»Î¿Î³ÏÎ½ Î±Ï€Î¬Î½Ï„Î·ÏƒÎ·Ï‚
        while len(choice_list) < 4:

            # Î¹Î´Î¹ÏŒÏ„Î·Ï„ÎµÏ‚ ÎµÏ€Î¹Î»Î¿Î³Î®Ï‚
            radio_btn = Radiobutton(self.window, text="", variable=self.user_answer, value='', font=("Segoe UI", 18), background='#F5F5F6')

            # Ï€ÏÎ¿ÏƒÎ¸Î­Ï„Ï‰ Ï„Î·Î½ Î»Î¯ÏƒÏ„Î± ÎµÏ€Î¹Î»Î¿Î³ÏÎ½ ÏƒÏ„Î± ÎºÎ¿Ï…Î¼Ï€Î¹Î¬
            choice_list.append(radio_btn)

            # Ï„Î¿Ï€Î¿Î¸Î­Ï„Î·ÏƒÎ· ÎºÎ¿Ï…Î¼Ï€Î¹Î¿Ï
            radio_btn.place(x=300, y=y_pos)

            # Î¼ÎµÏ„Î±Ï†Î¿ÏÎ¬ Ï„Î¿Ï… ÎºÎ¿Ï…Î¼Ï€Î¹Î¿Ï
            y_pos += 40

        # ÎµÏ€Î¹ÏƒÏ„ÏÎ­Ï†Ï‰ Ï„Î± ÎºÎ¿Ï…Î¼Ï€Î¹Î¬ ÎµÏ€Î¹Î»Î¿Î³ÏÎ½
        return choice_list

    def display_options(self):
        #ÎµÎ¼Ï†Î¬Î½Î¹ÏƒÎ· 4 ÎµÏ€Î¹Î»Î¿Î³ÏÎ½

        val = 0

        # Î½Î± Î¼Î·Î½ ÎµÎ¼Ï†Î±Î½Î¯Î¶Ï‰ ÎµÏ€Î¹Î»ÎµÎ³Î¼Î­Î½Î· ÎºÎ¬Ï€Î¿Î¹Î± ÎµÏ€Î¹Î»Î¿Î³Î®
        self.user_answer.set(None)

        #ÎµÏ€Î±Î½Î±Ï†Î¿ÏÎ¬ ÎµÏ€Î¹Î»Î¿Î³ÏÎ½ Ï€Î¿Ï… Î¸Î± ÎµÎ¼Ï†Î±Î½Î¹ÏƒÏ„Î¿ÏÎ½ ÏƒÏ„Î± ÎºÎ¿Ï…Î¼Ï€Î¹Î¬
        for option in self.quiz.current_question.choices:
            self.opts[val]['text'] = option
            self.opts[val]['value'] = option
            val += 1

    def next_btn(self):   

        # Î±Î½ Î· Î±Ï€Î¬Î½Ï„Î·ÏƒÎ· ÎµÎ¯Î½Î±Î¹ ÏƒÏ‰ÏƒÏ„Î® Î® Î»Î¬Î¸Î¿Ï‚, Ï„Ï…Ï€ÏÎ½Ï‰ Î±Î½Ï„Î¯ÏƒÏ„Î¿Î¹Ï‡Î¿ Î¼Î®Î½Ï…Î¼Î±
        if self.quiz.check_answer(self.user_answer.get()):
            if self.quiz.check_answer==None:
                noAnswers+=1
            else:
                
                self.feedback["fg"] = "green"
                self.feedback["text"] = 'Î£Ï‰ÏƒÏ„Î¬! \U0001F44D'
        else:
            if self.quiz.check_answer==None:
                noAnswers+=1
            else:
                self.wrongAnswers+=1
                self.feedback['fg'] = 'red'
                self.feedback['text'] =('\u274E\n'
                                         f'Î— ÏƒÏ‰ÏƒÏ„Î® Î±Ï€Î¬Î½Ï„Î·ÏƒÎ· ÎµÎ¯Î½Î±Î¹: {self.quiz.current_question.correct_answer}')

        if self.quiz.has_more_questions():
            if (self.noAnswers >= 3):
                # 3 Î›Î¬Î¸Î¿Ï‚ Î±Ï€Î±Î½Ï„Î®ÏƒÎµÎ¹Ï‚
                self.display_result()
                # ÎºÎ»ÎµÎ¯Î½ÎµÎ¹ Ï„Î·Î½ ÎµÏ†Î±ÏÎ¼Î¿Î³Î®
                self.window.destroy()
            
            # Ï€Î¬ÎµÎ¹ ÏƒÏ„Î·Î½ ÎµÏ€ÏŒÎ¼ÎµÎ½Î·
            self.display_question()
            self.display_options()
        else:
            # Î±Î»Î»Î¹ÏÏ‚ Î²Î³Î±Î¯Î½ÎµÎ¹ Ï„Î¿ Î±Ï€Î¿Ï„Î­Î»ÎµÏƒÎ¼Î±
            self.display_result()

            # ÎºÎ»ÎµÎ¯Î½ÎµÎ¹ Ï„Î·Î½ ÎµÏ†Î±ÏÎ¼Î¿Î³Î®
            self.window.destroy()

    def prv_btn(self):
        if self.quiz.check_answer(self.user_answer.get()):
            self.feedback["fg"] = "green"
            self.feedback["text"] = 'Î£Ï‰ÏƒÏ„Î¬! \U0001F44D'
        else:
            self.feedback['fg'] = 'red'
            self.feedback['text'] =('\u274E\n'
                                     f'Î— ÏƒÏ‰ÏƒÏ„Î® Î±Ï€Î¬Î½Ï„Î·ÏƒÎ· ÎµÎ¯Î½Î±Î¹: {self.quiz.current_question.correct_answer}')

        if self.quiz.has_no_more_questions():
            # Ï€Î¬ÎµÎ¹ ÏƒÏ„Î·Î½ ÎµÏ€ÏŒÎ¼ÎµÎ½Î·
            self.display_prv_question()
            self.display_options()
        else:
            # Î±Î»Î»Î¹ÏÏ‚ Î²Î³Î±Î¯Î½ÎµÎ¹ Ï„Î¿ Î±Ï€Î¿Ï„Î­Î»ÎµÏƒÎ¼Î±
            self.display_result()

            # ÎºÎ»ÎµÎ¯Î½ÎµÎ¹ Ï„Î·Î½ ÎµÏ†Î±ÏÎ¼Î¿Î³Î®
            self.window.destroy()
        
        
    pygame.mixer.init()       
    def buttons(self):
        pygame.mixer.music.load(r"Vangelis -01- Titles.mp3")
        
        pygame.mixer.music.play(loops=0)

        # ÎµÎ¼Ï†Î¬Î½Î¹ÏƒÎ· ÎºÎ¿Ï…Î¼Ï€Î¹ÏÎ½ Ï€ÏÎ¿Î·Î³Î¿Ï…Î¼ÎµÎ½Î¿, ÎµÏ€ÏŒÎ¼ÎµÎ½Î¿ ÎºÎ±Î¹ Ï„Î­Î»Î¿Ï‚

        
        prv_button = Button(self.window, text="Previous", command=self.prv_btn,
                             width=10, bg="#002f6c", fg="white", font=("Segoe UI", 16, "bold"))
        prv_button.place(x=25, y=460)

      
        next_button = Button(self.window, text="Next", command=self.next_btn,
                             width=10, bg="#002f6c", fg="white", font=("Segoe UI", 16, "bold"))
        next_button.place(x=785, y=460)

        
        quit_button = Button(self.window, text="Exit", command=self.window.destroy,
                             width=10, bg="#d50000", fg="#ffffff", font=("Segoe UI", 16, " bold"))
        quit_button.place(x=785, y=560)
        

    def display_result(self):
        #ÎµÎ¼Ï†Î¬Î½Î¹ÏƒÎ· Î±Ï€Î¿Ï„ÎµÎ»Î­ÏƒÎ¼Î±Ï„Î¿Ï‚ Î¼Îµ Ï€Î»Î±Î¯ÏƒÎ¹Î¿ Î¼Î·Î½Ï…Î¼Î¬Ï„Ï‰Î½
        correct, wrong, score_percent = self.quiz.get_score()

        correct = f"Î£Ï‰ÏƒÏ„Î­Ï‚: {correct}"
        wrong = f"Î›Î¬Î¸Î¿Ï‚: {wrong}"

        # Ï€Î¿ÏƒÎ¿ÏƒÏ„ÏŒ ÏƒÏ‰ÏƒÏ„ÏÎ½ Î±Ï€Î±Î½Ï„Î®ÏƒÎµÏ‰Î½
        result = f"Score: {score_percent}%"

        # ÎµÎ¼Ï†Î±Î½Î¯Î¶Ï‰ Ï„Î± Î±Ï€Î¿Ï„ÎµÎ»Î­ÏƒÎ¼Î±Ï„Î±
        messagebox.showinfo("Î‘Ï€Î¿Ï„ÎµÎ»Î­ÏƒÎ¼Î±Ï„Î±", f"{result}\n{correct}\n{wrong}")

#ÎºÎµÎ½Î® Î»Î¯ÏƒÏ„Î±
question_bank = []
# Î±Î½Î¬Î»Î¿Î³Î± Ï„Î¹Ï‚ Ï€Î±ÏÎ±Î¼Î­Ï„ÏÎ¿Ï…Ï‚ Ï€Î¿Ï… Î­Î´Ï‰ÏƒÎ± ÏƒÏ„Î·Î½ Î±ÏÏ‡Î®
for question in question_data:
    #Î»Î¯ÏƒÏ„Î± Ï€Î¿Ï… Ï€ÎµÏÎ¹Î­Ï‡ÎµÎ¹ Ï„Î· ÏƒÏ‰ÏƒÏ„Î® ÎºÎ±Î¹ Ï„Î¹Ï‚ Î»Î¬Î¸Î¿Ï‚ Î±Ï€Î±Î½Ï„Î®ÏƒÎµÎ¹Ï‚
    choices = []
    question_text = html.unescape(question["question"])
    correct_answer = html.unescape(question["correct_answer"])
    incorrect_answers = question["incorrect_answers"]
    for ans in incorrect_answers:
        choices.append(html.unescape(ans))
    choices.append(correct_answer)
    #Î±Î½Î±ÎºÎ±Ï„Î­Ï…Ï‰
    shuffle(choices)
    # Î±Î½Ï„Î¹ÎºÎµÎ¯Î¼ÎµÎ½Î¿ ÎºÎ»Î¬ÏƒÎ·Ï‚ Question
    new_question = Question(question_text, correct_answer, choices)
    question_bank.append(new_question)

#Î±Î½Ï„Î¹ÎºÎµÎ¯Î¼ÎµÎ½Î¿ ÎºÎ»Î¬ÏƒÎ·Ï‚ Quiz
quiz = Quiz(question_bank)
#Î±Î½Ï„Î¹ÎºÎµÎ¯Î¼ÎµÎ½Î¿ ÎºÎ»Î¬ÏƒÎ·Ï‚ QuizInterface
quiz_ui = QuizInterface(quiz)


print("ÎŸÎ»Î¿ÎºÎ»Î·ÏÏÎ¸Î·ÎºÎµ")
print(name,f"Ï„Î¿ score ÏƒÎ¿Ï… ÎµÎ¯Î½Î±Î¹: {quiz.score}/{quiz.question_no}")
#Î³Î¹Î± 3 Ï€Î±Î¯ÎºÏ„ÎµÏ‚
score = 3;
# save Ï„Î¿ score
with open('score.dat', 'wb') as file:
 pickle.dump(score, file)

